<!-- HEADER -->
<%- include('partials/head') %>
  <%- include('partials/navbar') %>

    <!-- BANNER -->
    <!-- <%- include('partials/banner') %> -->

    <!-- BREADCRUMB -->
    <div class="container">
      <div class="row mt-5">
        <% products.forEach(function(product) { %>
        <div class="col-sm-4 mb-4 mb-sm-0">
          <div class="card shadow-sm">
            <img src="/img/<%= product.image %>" alt="<%= product.image %>">
            <div class="card-body">
              <h3 class="card-title">
                <%= product.name %>
              </h3>
              <h4 class="card-text text-danger">
                <%= product.price %> AUD
              </h4>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="product/<%= product.id %>" type="button" class="btn btn-primary">View</a>
                  <a href="/order" type="button" class="btn btn-primary">Order</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    

      <!-- FOOTER -->
      <%- include("partials/footer") %>
        <!-- END -->
        <%- include('partials/ending') %>