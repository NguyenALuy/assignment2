<%- include('partials/head') %>
    <!-- HEADER -->
    <%- include('partials/navbar') %>

        <!-- BANNER -->
        <!-- <%- include('partials/banner') %> -->

        <!-- MAIN HOME-->
        <main>
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <% products.forEach(function(product){ %>
                        <div class="col">
                          <div class="card shadow-sm">
                            <img src="/img/logo.png" alt="...">
                            <div class="card-body">
                              <h3 class="card-title">
                                <%= product.name %>
                              </h3>
                              <h4 class="card-text text-danger">
                                <%= product.price %> AUD
                              </h4>
                              <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                  <a href="product/<%= product.id %>" type="button" class="btn btn-primary">View</a>
                                  <a href="/order" type="button" class="btn btn-primary">Order</a>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% }); %>
                </div>
            </div>
        </main>

        <!-- FOTTER -->
        <%- include("partials/footer") %>
        <!-- END -->
        <%- include('partials/ending') %>