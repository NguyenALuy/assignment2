<!-- MAIN HOME-->
<main>
  <div class="wrapper">
    <header>
      <h2>Price Range</h2>
      <p>Use slider or enter min and max price</p>
    </header>
    <form action="/filter" method="get">
      <div class="price-input">
        <div class="field">
          <span>Min</span>
          <input type="number" name="minPrice" class="input-min">
        </div>
        <div class="separator">-</div>
        <div class="field">
          <span>Max</span>
          <input type="number" name="maxPrice" class="input-max">
        </div>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">View Products</button>
    </form>
    
  </div>

  <div class="container">
    <div class="row">
      <% products.forEach(function(product){ %>
        <div class="col-sm-3 mb-4 mb-sm-0">
          <div class="card shadow-sm">
            <img src="/img/<%= product.image %>" alt="<% product.image %>">
            <div class="card-body">
              <h3 class="card-title">
                <%= product.name %>
              </h3>
              <h4 class="card-text text-danger">
                <%= product.price %> AUD
              </h4>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/login" type="button" class="btn btn-primary">View</a>
                  <a href="/login" type="button" class="btn btn-primary">Order</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</main>

