<!-- HEADER -->
<%- include('partials/head') %>
  <!-- NAVBAR FAKE -->
  <header class="p-3 border-bottom bg-light">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>
  
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center align-items-center mb-md-0">
          <li><a href="/" class="nav-link px-2 link-secondary">
            <img src="/img/logo.png" alt="logo.png" width="100" height="100" class="rounded-circle">
          </a></li>
          <li><a href="/login" class="nav-link px-2 link-body-emphasis fw-bold">About us</a></li>
          <li><a href="/login" class="nav-link px-2 link-body-emphasis fw-bold">Profile</a></li>
        </ul>
  
        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
          <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
        </form>
  
        <div class="dropdown text-end">
          <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="/img/logo.png" alt="logo.png" width="50" height="50" class="rounded-circle">
          </a>
          <ul class="dropdown-menu text-small">
            <li><a class="dropdown-item" href="/login">My Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/login">Sign out</a></li>
          </ul>
        </div>
      </div>
    </div>
  </header>
    <!-- BANNER -->
    <%- include('partials/banner') %>

      <!-- MAIN HOME-->
      <main>
        <div class="filter-wrapper">
          <div class="text-center">
            <h3>Price Range</h3>
            <p>Please enter the price you want to look for:</p>
          </div>
          <form action="/filter" method="get" class="d-flex justify-content-center">
            <div class="price-input">
              <div class="field">
                <span>Min Price</span>
                <input type="number" name="minPrice" class="input-min">
                <span>Max Price</span>
                <input type="number" name="maxPrice" class="input-max">
              </div>
              <div class="align-items-center text-center mt-3">
                <button class="btn btn-lg btn-primary btn-filter align-items-center" type="submit">Apply</button>
              </div>
            </div>
          </form>
        </div>
        <div class="container">
          <div class="row">
            <% products.forEach(function(product){ %>
              <div class="col-sm-3 mb-4 mb-sm-0">
                <div class="card shadow-sm">
                  <img src="/img/<%= product.image %>" alt="<% product.image %>">
                  <div class="card-body">
                    <h3 class="card-title">
                      <%= product.name %>
                    </h3>
                    <h4 class="card-text text-danger">
                      <%= product.price %> AUD
                    </h4>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <a href="/login" type="button" class="btn btn-primary">View</a>
                        <a href="/login" type="button" class="btn btn-primary">Order</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% }); %>
          </div>
        </div>
      </main>

      <!-- FOOTER -->
      <%- include("./partials/footer") %>
        <!-- END -->
        <%- include('partials/ending') %>