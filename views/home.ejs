<%- include('partials/head') %>
    <!-- HEADER -->
    <%- include('partials/navbar') %>

        <!-- BANNER -->
        <!-- <%- include('partials/banner') %> -->

        <!-- MAIN HOME-->
        <main>
            <div class="container">
                <div class="row ">
                    <% products.forEach(function(product){ %>
                        <div class="col-sm-6 mb-3 mb-sm-0">
                          <div class="card shadow-sm">
                            <img src="/img/<%= product.img %>" alt="...">
                            <div class="card-body">
                              <h3 class="card-title">
                                <%= product.name %>
                              </h3>
                              <h4 class="card-text text-danger">
                                <%= product.price %> AUD
                              </h4>
                              <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                  <a href="/login" type="button" class="btn btn-primary">View</a>
                                  <a href="/login" type="button" class="btn btn-primary">Order</a>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% }); %>
                </div>
            </div>
        </main>

