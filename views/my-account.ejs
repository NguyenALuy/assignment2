<%- include('partials/head') %>
    <!-- HEADER -->
    <%- include('partials/navbar') %>
        <div class="row m-5">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="/img/<%= user.image %>" alt="<%= user.image %>" class="rounded img-fluid"
                            style="width: 90%;">
                        <hr>
                        <br>    
                        <h5 class="my-3">
                            Username:
                            <%= user.username %>
                        </h5>
                        <div class="d-flex justify-content-center">
                            <button type="button" class="btn btn-success">
                                <a href="/my-account/<%= user._id  %>/update"
                                    class="text-decoration-none text-white">Update Image</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Username</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    <%= user.username %>
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">User ID</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    <%= user._id %>
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">User Role</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    <%= user.role %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <%- include('partials/ending') %>