<%- include("./partials/head") %>
  <section class="vh-100">
    <form action="/login" method="post">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
              <div class="card-body p-5 text-center">
                <div class="form-outline mb-2">
                  <img class="mb-4" src="/img/logo.png" alt="" width="72" height="57">
                  <h1 class="h3 mb-3 fw-normal">Please Sign In</h1>
                  <label for="floatingInput">Username</label>
                  <input type="text" name="username" id="typeEmailX-2" class="form-control form-control-lg" />

                </div>
                <div class="form-outline mb-2">
                  <label for="floatingPassword">Password</label>
                  <input type="password" name="password" id="typePasswordX-2" class="form-control form-control-lg" />
                </div>
                <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>

                <hr class="my-4">


                <button class="col-12 btn btn-primary btn-lg btn-block mb-3"><a href="./customer-register">Register
                    as
                    Customer</a></button>
                <button class="col-12 btn btn-primary btn-lg btn-block  mb-3"><a href="./vendor-register">Register
                    as
                    Vendor</a></button>
                <button class="col-12 btn btn-primary btn-lg btn-block  mb-3"><a href="./shipper-register">Register
                    as
                    Shipper</a></button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </section>
  <%- include("./partials/ending") %>